# Production Environment Configuration
# Spectrum Care Platform - Enterprise Deployment

# Application Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
NEXT_PUBLIC_APP_URL=https://spectrumcare.platform
NEXT_PUBLIC_API_URL=https://spectrumcare.platform/api

# Database Configuration (Production PostgreSQL)
DATABASE_URL=postgresql://spectrumcare_prod:${DB_PASSWORD}@db.spectrumcare.platform:5432/spectrumcare_production?sslmode=require
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30000

# Authentication & Security
JWT_SECRET=${JWT_SECRET_PRODUCTION}
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
SESSION_SECRET=${SESSION_SECRET_PRODUCTION}

# Stripe Payment Processing (Production)
STRIPE_PUBLISHABLE_KEY=${STRIPE_PROD_PUBLISHABLE_KEY}
STRIPE_SECRET_KEY=${STRIPE_PROD_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_PROD_WEBHOOK_SECRET}

# OpenAI Integration (Production)
OPENAI_API_KEY=${OPENAI_PROD_API_KEY}
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000

# WhatsApp Business API (Production)
WHATSAPP_ACCESS_TOKEN=${WHATSAPP_PROD_ACCESS_TOKEN}
WHATSAPP_PHONE_NUMBER_ID=${WHATSAPP_PROD_PHONE_NUMBER_ID}
WHATSAPP_WEBHOOK_VERIFY_TOKEN=${WHATSAPP_PROD_WEBHOOK_TOKEN}

# Email Configuration (Production)
SMTP_HOST=smtp.spectrumcare.platform
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=${SMTP_PROD_USER}
SMTP_PASS=${SMTP_PROD_PASS}
FROM_EMAIL=noreply@spectrumcare.platform

# File Storage (Production AWS S3)
AWS_ACCESS_KEY_ID=${AWS_PROD_ACCESS_KEY}
AWS_SECRET_ACCESS_KEY=${AWS_PROD_SECRET_KEY}
AWS_REGION=eu-west-2
AWS_S3_BUCKET=spectrumcare-production-files
AWS_CLOUDFRONT_DOMAIN=cdn.spectrumcare.platform

# Redis Cache (Production)
REDIS_URL=redis://:${REDIS_PASSWORD}@cache.spectrumcare.platform:6379
REDIS_CACHE_TTL=3600

# Monitoring & Analytics
MONITORING_API_KEY=${MONITORING_PROD_API_KEY}
ERROR_TRACKING_DSN=${SENTRY_PROD_DSN}
ANALYTICS_ID=${GOOGLE_ANALYTICS_PROD_ID}

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CSRF_PROTECTION=true
ENABLE_RATE_LIMITING=true

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_MAX_AGE=86400

# Compliance & Legal
GDPR_COMPLIANCE=true
HIPAA_COMPLIANCE=true
DATA_RETENTION_DAYS=2555 # 7 years
AUDIT_LOGGING=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Feature Flags (Production)
ENABLE_REAL_TIME_FEATURES=true
ENABLE_AI_PROCESSING=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_WHATSAPP_INTEGRATION=true
ENABLE_PROFESSIONAL_PORTAL=true
ENABLE_SENCO_PORTAL=true

# Multi-tenancy
MULTI_TENANT_ENABLED=true
DEFAULT_TENANT_PLAN=professional

# API Versioning
API_VERSION=v1
ENABLE_API_VERSIONING=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_RETENTION_DAYS=90

# Health Checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Scaling Configuration
AUTO_SCALING_ENABLED=true
MIN_INSTANCES=2
MAX_INSTANCES=10
TARGET_CPU_UTILIZATION=70
